<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cat.xojan.random1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Chromebook support -->
    <uses-feature android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.type.pc"
        android:required="false" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--<activity android:name=".ui.mediaplayer.RadioPlayerActivity"/>-->

        <activity android:name=".ui.browser.BrowseActivity"/>

        <activity android:name=".ui.mediaplayback.MediaPlaybackFullScreenActivity"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="5742c867fe11c1f0cb1fc503b90ed10ff5f54e91" />

        <receiver android:name=".receiver.DownloadCompleteReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE">
                </action>
            </intent-filter>
        </receiver>

        <!--<receiver android:name="android.support.v4.media.session.MediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>-->

        <!--<service android:name=".service.MusicPlayerService"
            android:exported="false"
            android:stopWithTask="false"/>-->

        <service
            android:name=".service.MediaPlaybackService"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>

    </application>
</manifest>